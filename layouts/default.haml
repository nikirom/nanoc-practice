%html
  %head
    %title simplestyle_7
    %meta{:content => "website description", :name => "description"}/
    %meta{:content => "nanoc 3.1.6", :name => "generator"}/
    %meta{:content => "website keywords, website keywords", :name => "keywords"}/
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Tangerine&v1", :rel => "stylesheet", :type => "text/css"}/
